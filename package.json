{
  "name": "oil-inventory-management",
  "private": true,
  "version": "1.0.1",
  "main": "electron/main.cjs",
  "author": "Rehan Ali",
  "description": "Oil Inventory Management Desktop Application",
  "scripts": {
    "dev": "vite",
    "postinstall": "electron-builder install-app-deps",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && electron electron/main.cjs",
    "start": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "package": "vite build && electron-builder",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.oilinventory.app",
    "productName": "Oil Inventory Management",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "npmRebuild": false,
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}